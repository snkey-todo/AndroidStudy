<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="mainContent">
        <item name="android:background">@color/white</item>
    </style>
 <style name="StartAppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:fragmentOpenEnterAnimation">@null</item>
        <item name="android:fragmentOpenExitAnimation">@null</item>
        <item name="android:fragmentCloseEnterAnimation">@null</item>
        <item name="android:fragmentCloseExitAnimation">@null</item>
        <item name="android:fragmentFadeEnterAnimation">@null</item>
        <item name="android:fragmentFadeExitAnimation">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="tittleLine">
        <item name="android:background">@color/title_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HKDialogLoading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="item_task">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="setting_line">
        <item name="android:textColor">@color/color_666</item>
        <item name="android:textSize">@dimen/text_size_normal_16</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <!-- 标题栏样式 -->
    <style name="title_bar_style">
        <item name="android:background">@color/title_bg</item>
    </style>

    <!-- 标题栏中字体样式 -->
    <style name="title_bar">
        <item name="android:textColor">@drawable/titlebar_textview_click_effect</item>
        <item name="android:textSize">@dimen/text_size_normal_16</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="item_task_name">
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">@dimen/text_size_normal_16</item>
    </style>

    <style name="text_size_normal_blue">
        <item name="android:textColor">@color/title_bg</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_size_normal_black">
        <item name="android:textColor">@color/color_3c</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_size_small_black">
