    <style name="text_size_small_grey">
        <item name="android:textColor">@color/create_time_color</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="text_size_smallest_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_smallest</item>
    </style>

    <style name="text_size_small_click">
        <item name="android:textColor">@drawable/sendto_click_selector</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="text_size_normal_grey">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_size_normal_14_orange">
        <item name="android:textColor">@color/reserve_color</item>
        <item name="android:textSize">@dimen/text_size_normal_14</item>
    </style>

    <style name="text_size_normal_14_blue">
        <item name="android:textColor">@color/title_bg</item>
        <item name="android:textSize">@dimen/text_size_normal_14</item>
    </style>

    <style name="text_size_small_11_blue">
        <item name="android:textColor">@color/title_bg</item>
        <item name="android:textSize">@dimen/text_size_small_11</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_size_small_11_orange">
        <item name="android:textColor">@color/reserve_color</item>
        <item name="android:textSize">@dimen/text_size_small_11</item>
    </style>

    <style name="text_size_large_blue">
        <item name="android:textColor">@color/title_bg</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="text_size_large_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="text_size_normal_16_grey">
        <item name="android:textColor">@color/light_gray_1</item>
        <item name="android:textSize">@dimen/text_size_normal_16</item>
    </style>

    <style name="text_size_smallest_grey">
        <item name="android:textColor">@color/create_time_color</item>
        <item name="android:textSize">@dimen/text_size_smallest</item>
    </style>


    <style name="ToastDialogTitleTextStyle" parent="NormalTextViewStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToastDialogMsgTextStyle" parent="ToastDialogTitleTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="NormalTextViewStyle" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="myDialogTheme2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg_shape</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomDialogTitleTextStyle" parent="NormalTextViewStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/blank_space_normal</item>
        <item name="android:paddingRight">@dimen/blank_space_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomDialogMsgTextStyle" parent="NormalTextViewStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">@dimen/blank_space_normal</item>
    </style>

    <style name="CustomDialogButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_dialog_certain_selector</item>
        <item name="android:padding">@dimen/button_min_padding</item>
    </style>

    <style name="CustomDialogCancelButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_dialog_cancel_selector</item>
        <item name="android:padding">@dimen/button_min_padding</item>
    </style>

    <style name="MenuDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MenuDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="qZonePublishProgressStyle">
        <item name="android:maxWidth">30.0dip</item>
        <item name="android:maxHeight">30.0dip</item>
        <item name="android:minWidth">30.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>

    <style name="G1_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="B5_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/skin_black</item>
    </style>

    <style name="B6_Font">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/skin_black</item>
    </style>

    <style name="B7_Font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/skin_black</item>
    </style>
    <!-- 次要TextView的字体风格 -->
    <style name="MinorTextViewStyle" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Animation.Popup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
</resources>