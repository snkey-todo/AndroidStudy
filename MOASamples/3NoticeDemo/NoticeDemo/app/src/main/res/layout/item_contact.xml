<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_sortKeyLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_click_bg_color"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_sortKey"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/blank_space_normal"
            android:layout_weight="1"
            android:padding="@dimen/blank_space_small"
            android:text="A"
            android:textColor="@color/light_gray_1"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/line_color" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.hxsj.noticedemo.widget.CircularImage
            android:id="@+id/img_header"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/blank_space_small"
            android:layout_marginLeft="@dimen/blank_space_small"
            android:layout_marginTop="@dimen/blank_space_small"
            android:layout_marginRight="@dimen/blank_space_small"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@null" />

        <TextView
            android:id="@+id/tv_contactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_header"
            android:layout_toLeftOf="@+id/chk_contactSelector"
            android:text="张山峰"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal_16" />
        
        <ImageView
            android:id="@+id/chk_contactSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/blank_space_normal"
            android:layout_marginRight="@dimen/blank_space_normal_20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ico_checkbox_selector" />
    </RelativeLayout>

</LinearLayout>