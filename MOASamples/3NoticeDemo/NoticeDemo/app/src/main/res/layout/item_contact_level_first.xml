<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/blank_space_normal_20"
        android:layout_marginLeft="@dimen/blank_space_normal"
        android:layout_marginTop="@dimen/blank_space_normal_20"
        android:singleLine="true"
        android:text="北京华晟智汇科技有限公司"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/blank_space_normal"
        android:layout_marginRight="@dimen/blank_space_normal"
        android:layout_toLeftOf="@+id/image"
        android:layout_toRightOf="@+id/title"
        android:gravity="center|right"
        android:singleLine="true"
        android:text="12"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_normal" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/blank_space_small"
        android:src="@drawable/contact_icon_enter" />

</RelativeLayout>